{
  "name": "neo-school-user-service",
  "version": "1.0.0",
  "author": "Neo Financial Engineering <engineering@neofinancial.com>",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=22.2.0",
    "npm": ">=10.9.2"
  },
  "scripts": {
    "start": "TZ=UTC ts-node-dev --no-notify -- src/server.ts",
    "start:live": "npm start & npm run start:user-job",
    "start:user-job": "ts-node scripts/update-users-job.ts",
    "build": "npm run typecheck && npm run codegen && tsc -p tsconfig.build.json",
    "codegen": "nf build && npm run format",
    "generate:types": "ts-node scripts/generate-schema.ts && nf build --type graphs && npm run format",
    "generate:types:force": "ts-node --log-error scripts/generate-schema.ts && nf build --type graphs",
    "generate:test": "nf generate-test",
    "generate:class": "nf generate-class",
    "format": "prettier --write \"**/*.{ts,js,json,graphql,gql,yaml,yml,md}\" --log-level error --log-level warn",
    "typecheck": "tsc -p ./tsconfig.json && tsc -p test/tsconfig.json && tsc -p scripts/tsconfig.json",
    "clean": "rimraf build",
    "format:check": "prettier --check \"**/*.{ts,js,json,graphql,gql,yaml,yml,md}\"",
    "format:dependency": "prettier --write \"**/dependency-registries/*\" \"**/consumers/index.ts\" \"**/lib/*\"",
    "format:file": "prettier --write",
    "format:inject-token": "prettier --write \"**/lib/*\"",
    "generate:schema": "ts-node scripts/generate-schema.ts",
    "generate:strict-inject": "nf generate-strict-inject && npm run format:inject-token",
    "generate:resolvers": "nf build --type graphs",
    "lint": "eslint \"**/*.{ts,js}\"",
    "migration:create": "neo-migration create",
    "migration:status": "neo-migration status",
    "migration:up": "neo-migration up",
    "migration:down": "neo-migration down",
    "migration:skip": "neo-migration skip",
    "scan:consumers": "neo-queue scan-consumers",
    "seed": "ts-node scripts/seed-user-database.ts",
    "test": "NODE_ENV=test TZ=UTC vitest run",
    "test:compile": "tsc -p test/tsconfig.json",
    "test:coverage": "npm test -- --coverage",
    "test:integration": "NODE_ENV=test TZ=UTC vitest run --reporter=verbose --config vitest.integration.config.js --passWithNoTests",
    "test:watch": "NODE_ENV=test TZ=UTC vitest",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@neofinancial/neo-date": "^1.6.0",
    "@neofinancial/neo-framework": "^8.6.3",
    "config-dug": "^1.7.2",
    "date-fns": "^2.30.0",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^9.5.0",
    "@faker-js/faker": "^8.0.2",
    "@neofinancial/neo-migration": "^6.0.0",
    "@neofinancial/neo-seed": "^4.1.1",
    "@neofinancial/neo-test-factory": "^1.1.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "@vitest/coverage-v8": "^0.34.3",
    "eslint": "^8.38.0",
    "eslint-config-neo": "^0.12.1",
    "jest-cucumber": "^3.0.1",
    "lint-staged": "^13.2.1",
    "mongodb-memory-server-core": "^8.15.1",
    "prettier": "^3.0.3",
    "ts-node": "10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "vitest": "^0.34.3"
  }
}
