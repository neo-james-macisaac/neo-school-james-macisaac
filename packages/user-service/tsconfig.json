{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "useUnknownInCatchVariables": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "target": "es2021",
    "lib": ["es2021"],
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": ".",
    "typeRoots": ["src/infrastructure/types", "./node_modules/@types"],
    "paths": {
      "*": ["*", "./node_modules/*", "src/*"]
    }
  },
  "include": ["src/**/*"]
}
